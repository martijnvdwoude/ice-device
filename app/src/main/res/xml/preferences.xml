<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Proxy preferences -->
    <PreferenceCategory
        android:title="@string/category_proxy">

        <EditTextPreference
            android:key="preference_proxy_device_id"
            android:title="@string/preference_proxy_device_id_title"
            android:summary="@string/preference_proxy_device_id_summary"
            android:dialogTitle="@string/preference_proxy_device_id_dialog_title" />

        <CheckBoxPreference
            android:key="preference_proxy_custom_url_checkbox"
            android:title="@string/preference_proxy_custom_url_checkbox_title"
            android:summary="@string/preference_proxy_custom_url_checkbox_summary"/>

        <EditTextPreference
            android:key="preference_proxy_custom_url"
            android:title="@string/preference_proxy_custom_url_title"
            android:summary="@string/preference_proxy_custom_url_summary"
            android:dialogTitle="@string/preference_proxy_custom_url_dialog_title"
            android:dependency="preference_proxy_custom_url_checkbox"/>

        <EditTextPreference
            android:key="preference_proxy_port"
            android:title="@string/preference_proxy_port_title"
            android:summary="@string/preference_proxy_port_summary"
            android:dialogTitle="@string/preference_proxy_port_dialog_title"
            android:inputType="number"/>

    </PreferenceCategory>

     <!--Beacon preferences -->
